{
  "name": "nextjs-chrome-extension",
  "version": "0.1.0",
  "description": "Template to create chrome extension with Next.js",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=app-ui",
    "build": "npm run build --workspace=app-ui",
    "extension:dev": "npm run extension:dev --workspace=app-ui && npm run dev --workspace=extension-specific",
    "extension:build": "npm run extension:build --workspace=app-ui && npm run build --workspace=extension-specific",
    "extension:test": "npm run dev --workspace=extension-test-app",
    "utility:api-codegen": "npm run api-codegen --workspace=utility-scripts",
    "utility:icon-generator": "npm run icon-generator --workspace=utility-scripts",
    "prettier": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fukaraadam-workspace/chrome-extension-nextjs-template.git"
  },
  "keywords": [
    "chrome extension",
    "nextjs",
    "template"
  ],
  "author": "Furkan Alan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fukaraadam-workspace/chrome-extension-nextjs-template/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11"
  }
}
